<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_ruleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        android:text="Name of your rule" />

    <EditText
        android:id="@+id/editText_ruleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ruleName"
        android:layout_below="@+id/textView_ruleName"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint='Ex: "Bottoms Up"'
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_ruleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Description"
        android:layout_below="@+id/editText_ruleName"
        android:layout_alignStart="@+id/editText_ruleName" />

    <EditText
        android:id="@+id/editText_ruleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ruleDescription"
        android:layout_below="@+id/textView_ruleDescription"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint='Ex: "Finish your Drinks"'
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_createRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="Create"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="19dp" />

</RelativeLayout>