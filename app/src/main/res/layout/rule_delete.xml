<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_ruledeletename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_ruledeletename"
        android:layout_marginTop="38dp"
        android:text="Name of the Rule you want to Delete" />

    <Button
        android:id="@+id/button_ruleDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="Delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="19dp" />

    <EditText
        android:id="@+id/editText_ruledeletename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextView_ruledeletename"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint='Ex: "Waterfall"'
        android:inputType="textPersonName" />
</RelativeLayout>