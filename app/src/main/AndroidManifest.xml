<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mathieu.databasetest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Credits"
            android:label="Credits"
            android:parentActivityName=".Home"/>
        <activity
            android:name=".Game_Settings"
            android:label="Game Settings"
            android:theme="@style/game_settings_theme" />
        <activity
            android:name=".Game"
            android:label="Drinkup!"/>
        <activity
            android:name=".CreateRule"
            android:label="Create A Rule"/>
        <activity
            android:name=".DeleteRule"
            android:label="Delete A Rule"/>
        <activity
            android:name=".ChangeRule"
            android:label="Change A Rule"/>
        <activity
            android:name=".ViewSet"
            android:label="View Game Card Set"/>
        <activity
            android:name=".ViewRules"
            android:label="View Rules"/>
        <activity
            android:name=".Game_End"
            android:label="Game Over"/>

    </application>

</manifest>